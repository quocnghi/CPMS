
@{
    ViewBag.Title = "DsTaikhoan";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
}
<link href="https://gitcdn.github.io/bootstrap-toggle/2.2.2/css/bootstrap-toggle.min.css" rel="stylesheet">
<link href="~/Areas/CMS/Content/Curriculum/assets/libs/toastr/build/toastr.min.css" rel="stylesheet">
<link rel="stylesheet" type="text/css" href="~/Areas/CMS/Content/Curriculum/assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css">
<link rel="stylesheet" type="text/css" href="~/Areas/CMS/Content/Curriculum/dist/css/TopButton.css">
<div class="page-wrapper" ng-controller="vaitroController">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Quản lý người dùng</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang Chủ</a></li>
                            <li class="breadcrumb-item">Quản lí chung</li>
                            <li class="breadcrumb-item active" aria-current="page">Quản lý người dùng</li>
                        </ol>
                    </nav>
                </div>
            </div>
            @*<div class="ml-auto text-right">
                    <button type="button" data-toggle="modal" data-target="#myModal" class="btn btn-success btn-lg" style="font-size:15px; margin-right:10px">Thêm</button>
                </div>*@
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-body wizard-content">
                <div class="table-responsive">
                    <table @*id="zero_config"*@ class="table table-striped table-bordered">
                        <thead style="text-align:center ; background-color: firebrick; color: white">
                            <tr>
                                <th style="text-align:center">STT</th>
                                <th style="text-align:center">Email</th>
                                <th style="text-align:center; width:200px">Tên Người Dùng</th>
                                <th style="text-align:center; width:200px">Loại Nhân Viên</th>
                                <th style="text-align:center; width:200px">Vai Trò</th>
                                <th style="text-align:center">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="u in users">
                                <td style="text-align:center">{{$index+1}}</td>
                                <td>{{u.UserName}}</td>
                                <td style="text-align:center">{{u.HoND}} {{u.TenND}}</td>
                                <td style="text-align:center">{{u.Nhanvien}}</td>
                                <td style="text-align:center">{{u.Tenvaitro}}</td>
                                <td style="text-align:center">
                                    <a href="javascript:void(0)" data-toggle="modal" data-target="#myModal"><img src="~/Areas/CMS/images/IconEdit.png" style="width:25px;" ng-click="edit(u)"></a>
                                   
                                </td>

                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        @*nut len dau trang*@
        <div class='lentop'>
            <div>
                <img src='https://1.bp.blogspot.com/-k6sikOdzFXQ/VwqCKDosmEI/AAAAAAAAKxE/nLxLhkTIO6o3iE5ZWmtxo2bf4QHdzPQNQ/s1600/top.png' />
            </div>
        </div>
        @*form chỉnh sửa nguoi dung *@
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="background-color:#d51c29; color:white">
                        <h4 class="modal-title">Chỉnh sửa người dùng</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <label style="margin-left:15px">Chọn nhân viên</label>
                        <select class="select2 form-control m-t-15" style="width: 100%" ng-model="user.MaNV">
                            <option hidden>Chọn nhân viên</option>
                            <option ng-repeat="nv in nhanviens" value="{{nv.MaNV}}">{{nv.Ho}} {{nv.Ten}}</option>
                        </select>
                        <br />
                        <label style="margin-left:15px">Chọn vai trò</label>
                        <select class="select2 form-control m-t-15" ng-model="user.Vaitro">
                            <option hidden>Chọn vai trò</option>
                            <option ng-repeat="vt in vaitros" value="{{vt.Id}}">{{vt.Name}}</option>
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" data-dismiss="modal" ng-click="editUser(user)">Lưu</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
<script src="~/Areas/CMS/Content/Curriculum/assets/extra-libs/DataTables/datatables.min.js"></script>
<script>
    /****************************************
     *       Basic Table                   *
     ****************************************/
    $('#zero_config').DataTable();
</script>
@*//nut len dau trang*@
<script>
    $(function () {
        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) $(".lentop").fadeIn();
            else $(".lentop").fadeOut();
        });
        $(".lentop").click(function () {
            $("body,html").animate({ scrollTop: 0 }, "slow");
        });
    });
</script>
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<script src="~/Areas/CMS/Content/Curriculum/assets/libs/toastr/build/toastr.min.js"></script>
<script src="~/Areas/CMS/Content/Curriculum/angular/QLUser/UserModel.js"></script>
<script src="~/Areas/CMS/Content/Curriculum/angular/QLUser/UserService.js"></script>
<script src="~/Areas/CMS/Content/Curriculum/angular/QLUser/UserController.js"></script>






