                                    <option ng-repeat="loai in LoaiPH" value="{{loai.MaLoaiPH}}">{{loai.TenLoaiPH}}</option>
                                </select>
                                <br />
                                <br />
                                <label>Phương tiện phục vụ giảng dạy</label>
                                <br />
                                <textarea rows="2" class="form-control" ng-model="khdt.PhuongtienGD"></textarea>
                                <br />
                                <label>Phương tiện phục vụ thi cử</label>
                                <br />
                                <textarea rows="2" class="form-control" ng-model="khdt.PhuongtienThi"></textarea>
