                        <br />
                        <h4>1.Thông Tin Chung Học Phần</h4>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Học Kỳ</label>
                                        <input type="text" min="1" max="30" id="" name="" class="form-control" ng-model="khdt.Hocky" />
                                    </div>
                                    <div class="col-lg-4">
                                        <label>Số tín chỉ</label>
                                        <input type="number" min="0" max="30" id="sotinchi" class="form-control sotinchi" disabled ng-model="khdt.SoTC">
                                    </div>
                                    <div class="col-lg-4">
                                        <label>Lý thuyết</label>
                                        <input type="number" min="0" max="6" id="lythuyet" oninput="myFunction()" class="form-control" onkeyup="if (this.value > 6 ) this.value = 1; if (this.value == null) this.value = 0" ng-model="khdt.GioLT" />

                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-4">
                                        <label>Thực hành</label>
                                        <input type="number" min="0" max="20" id="thuchanh" oninput="myFunction()" class="form-control" onkeyup="if (this.value > 20 ) this.value = 1; if (this.value == null) this.value = 0" ng-model="khdt.GioTH" />

                                    </div>
                                    <div class="col-lg-4">
                                        <label>Đồ án</label>
                                        <input type="number" min="0" max="20" id="doan" oninput="myFunction()" class="form-control" onkeyup="if (this.value > 20 ) this.value = 1; if (this.value == null) this.value = 0 " ng-model="khdt.GioDA" />

                                    </div>
