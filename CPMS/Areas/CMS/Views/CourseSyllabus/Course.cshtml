                                    <div class="col-lg-12">
                                        <label>Thang điểm</label>
                                        <textarea disabled type="text" class="form-control" maxlength="100" rows="5" ng-model="khdt.Thangdiem"></textarea>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">

                                <label>Hình thức</label>
                                <div class="row">
