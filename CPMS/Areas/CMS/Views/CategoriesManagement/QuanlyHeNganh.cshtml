        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background-color:#d51c29; color:white">
                    <h4 class="modal-title">Thêm Hệ / Ngành</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                @using (Html.BeginForm("AddHe", "CategoriesManagement", new { returnUrl = ViewBag.ReturnUrl, }, FormMethod.Post, null))
                {
                    <div class="modal-body">
                        <label style="font-style:italic">Chọn khoa</label>
                        @{ List<SelectListItem> SelectListItemKho = new List<SelectListItem>();
                            foreach (var item in Model.lstkhoa)
                            {
                                SelectListItem items = new SelectListItem();
                                items.Value = item.MaKhoa.ToString();
                                items.Text = item.TenKhoa;

                                SelectListItemKho.Add(items);
                            }
                        }
                        @Html.DropDownList("HnKhoa", SelectListItemKho, new { @class = "form-control" })

                        <br />
                        <label style="font-style:italic">Tên hệ</label>
                        @Html.TextBox("HnMota", null, new { @class = "form-control" })
                  
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Thêm" class="btn btn-default" />
                    </div>
                }

            </div>
        </div>
    </div>
    @*Form them he *@
    <div class="modal fade" id="addhenganh3">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background-color:#d51c29; color:white">
                    <h4 class="modal-title">Thêm Hệ / Ngành</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                @using (Html.BeginForm("AddNganh", "CategoriesManagement", new { returnUrl = ViewBag.ReturnUrl, }, FormMethod.Post, null))
                {
                    <div class="modal-body">
                        <label style="font-style:italic">Chọn hệ</label>

                        @{ List<SelectListItem> SelectListItemHeNganh = new List<SelectListItem>();
                            foreach (var item in Model.lsthe)
                            {
                                SelectListItem items = new SelectListItem();
                                items.Value = item.MaHN.ToString();
                                items.Text = item.Mota;

                                SelectListItemHeNganh.Add(items);
                            }
                        }
                        @Html.DropDownList("MaQH", SelectListItemHeNganh, new { @class = "form-control" })

                        <br />
                        <label style="font-style:italic">Tên ngành</label>
                        @Html.TextBox("HnMota", null, new { @class = "form-control" })
                        <br />
                        <label style="font-style:italic">Tên rút gọn</label>
                        @Html.TextBox("HnTenrutgon", null, new { @class = "form-control" })
                        <br />
                        <label style="font-style:italic">Mã đăng ký</label>
                        @Html.TextBox("HnMaDK", null, new { @class = "form-control" })
                    </div>
                    <div class="modal-footer">
                        <input type="submit" value="Thêm" class="btn btn-default" />
                    </div>
                }
            </div>
        </div>
    </div>
    @*Form chinh sua he nganh*@
    <div class="modal fade" id="edithenganh1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background-color:#d51c29; color:white">
                    <h4 class="modal-title">Chỉnh sửa Hệ / Ngành</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div id="editcontent"></div>
            </div>
        </div>
    </div>

    @*nut len dau trang*@
    <div class='lentop'>
        <div>
            <img src='~/Areas/CMS/images/top.png' />
        </div>
    </div>
</div>

@*//nut len dau trang*@
<script>
    function editEvent(index) {
        $("#editcontent").load("./CMS/CategoriesManagement/EditHeNganhAction/", { index: index });
    }

    $(function () {
        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) $(".lentop").fadeIn();
            else $(".lentop").fadeOut();
        });
        $(".lentop").click(function () {
            $("body,html").animate({ scrollTop: 0 }, "slow");
        });
    });
</script>
<script>
    $(document).ready(function () {
        $("#conTent2").hide();
        $('.thongtin').click(function () {
            $("#conTent1").show('slow');
            $("#conTent2").hide();
        });
        $('.duongdan').click(function () {
            $("#conTent2").show('slow');
            $("#conTent1").hide();

        });
    });
</script>

<script src="~/Areas/CMS/Content/Curriculum/assets/libs/toastr/build/toastr.min.js"></script>
