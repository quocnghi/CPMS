                    <label style="font-style:italic">Chọn hệ</label>
                        <select class="form-control" style="width:450px"ng-model="Hn.MaQH">
                            <option ng-repeat="he in henganhs" value="{{he.MaQH}}">{{he.Mota}}</option>
                        </select>
                    <br />
                    <label style="font-style:italic">Tên ngành</label>
                    <input type="text" class="form-control" ng-model="Hn.Mota" />
                    <br />
                    <label style="font-style:italic">Tên rút gọn</label>
                    <input type="text" class="form-control" ng-model="Hn.Tenrutgon" />
                    <br />
                    <label style="font-style:italic">Mã đăng ký</label>
                    <input type="text" class="form-control" ng-model="Hn.MaDK" />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="addNganh(Hn)">Thêm</button>
                </div>
            </div>
        </div>
    </div>
    @*Form chinh sua he nganh*@
    <div class="modal fade" id="edithenganh1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header" style="background-color:#d51c29; color:white">
                    <h4 class="modal-title">Chỉnh sửa Hệ / Ngành</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <div ng-if="editHn.MaQH == null">
                        <label style="font-style:italic">Chọn khoa</label>
                        <select class="form-control" style="width:450px" ng-model="editKh.MaKhoa">
                            <option ng-repeat="ma in KHOA" value="{{ma.MaKhoa}}">{{ma.TenKhoa}}</option>
                        </select>
                        <br />
                        <label style="font-style:italic">Tên hệ</label>
                        <input type="text" class="form-control" ng-model="editHn.Mota" />
                    </div>
                    <div ng-if="editHn.MaQH != null">
                        <label style="font-style:italic">Chọn hệ</label>
                        <select class="form-control" style="width:450px" ng-model="editHn.MaQH">
                            <option ng-repeat="he in henganhs" value="{{he.MaQH}}">{{he.Mota}}</option>
                        </select>
                        <br />
                        <label style="font-style:italic">Tên ngành</label>
                        <input type="text" class="form-control" ng-model="editHn.Mota" />
                        <br />
                        <label style="font-style:italic">Tên rút gọn</label>
                        <input type="text" class="form-control" ng-model="editHn.Tenrutgon" />
                        <br />
                        <label style="font-style:italic">Mã đăng ký</label>
                        <input type="text" class="form-control" ng-model="editHn.MaDK" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal" ng-click="editHenganh(editHn, editKh,editHn)">Lưu</button>
                </div>
            </div>
        </div>
    </div>
    @*nut len dau trang*@
    <div class='lentop'>
        <div>
            <img src='~/Areas/CMS/images/top.png' />
        </div>
    </div>
</div>
</div>
@*//nut len dau trang*@
<script>
    $(function () {
        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) $(".lentop").fadeIn();
            else $(".lentop").fadeOut();
        });
        $(".lentop").click(function () {
            $("body,html").animate({ scrollTop: 0 }, "slow");
        });
    });
</script>
<script>
    $(document).ready(function () {
        $("#conTent2").hide();
        $('.thongtin').click(function () {
            $("#conTent1").show('slow');
            $("#conTent2").hide();
        });
        $('.duongdan').click(function () {
            $("#conTent2").show('slow');
            $("#conTent1").hide();

        });
    });
</script>
