<div class="page-wrapper" ng-controller="EditCTDTKHStep4Controller">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Chỉnh Sửa Chương Trình Đào Tạo Kế Hoạch - Bước 4 </h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Trang chủ</a></li>
                            <li class="breadcrumb-item">Quản lý CTDT</li>
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","CTDTKeHoach", new { area = "CMS" }))">Danh Sách CTDT Kế hoạch</a></li>
                            <li class="breadcrumb-item active" aria-current="page">Thêm mới CTDT Kế hoạch</li>
                        </ol>
                    </nav>
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-body wizard-content" style="opacity:1">
                <h6 class="card-subtitle"></h6>

                <div>
                    <h2 style="text-align:center">PHÂN CÔNG XÂY DỰNG ĐỀ CƯƠNG HỌC PHẦN</h2>
                    <br />
                    <hr />
                    <div class="card">
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped table-bordered">
                                    <thead style="text-align:center ; background-color: firebrick; color: white">
                                        <tr>
                                            <th scope="col">STT</th>
                                            <th scope="col">Danh sách học phần</th>
                                            <th scope="col">Người xây dựng đề cương học phần</th>
                                            <th scope="col">Thao tác</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="mHoc in monHoc">
                                            <td align="center">{{$index+1}}</td>
                                            <td align="center">{{mHoc.TenMH}}</td>
                                            <td align="center"><span class="badge badge-pill badge-success float-left" style="font-size: 12px;">{{tenGV[$index].substr(0,tenGV[$index].length - 1)}}</span></td>
                                            <td align="center">
                                                <button type="button" class="btn btn-success" style="color:white" data-toggle="modal" data-target="#addGV" ng-click="getValue($index)">Chỉnh sửa giảng viên</button>
                                            </td>
                                        </tr>
                                        @*<tr>
                                                <td align="center">Ngày hoàn thành</td>
                                                <td colspan="3"><input class="form-control mydatepicker" type="text" ng-model="NgayHT" /></td>
                                            </tr>*@
                                    </tbody>
                                </table>
                                <div class="modal fade" id="addGV" tabindex="-1" role="dialog" aria-labelledby="addGVModel" aria-hidden="true">
                                    <div class="modal-dialog modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header" style="background-color:#d51c29; color:white">
                                                <h5 class="modal-title" id="addGVModel">Thêm giảng viên</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="form-group">
                                                    <input disabled type="text" placeholder="" class="form-control" ng-model="mHocTen">
                                                    <input type="hidden" ng-model="mHocId">
                                                    <input type="hidden" ng-model="stt">
                                                </div>
                                                <div class="form-group">
                                                    <select id="nvien" class="select2 form-control m-t-15" multiple style="width:100%" ng-model="decuong">
                                                        <option ng-repeat="nVien in nhanVien" value="{{nVien.Id}}">{{nVien.Ho}} {{nVien.Ten}}</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                                <button type="button" class="btn btn-success" ng-click="addGV(mHocId,decuong,stt)">Lưu</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
                <hr />
                <a class="btn" style="float:right;border-radius:25px; background-color:#b22222; color:white; border: 2px solid #ffffff;" href="javascript:void()" ng-click="chooseEmail()">Tiếp tục</a>
                <a class="btn " style="float:right; margin-right:1%;border-radius:25px ;color:black;border-bottom-color:#b22222; border: 1px solid #b22222;" href="@Url.Action("EditCTDTKehoachStep3","CTDTKehoach")">Quay lại</a>
            </div>
        </div>
    </div>

    @*nut len dau trang*@
    <div class='lentop'>
        <div>
            <img src='~/Areas/CMS/images/top.png' />
        </div>
    </div>

    <div class="modal fade" id="chooseEmailModal" tabindex="-1" role="dialog" aria-labelledby="chooseEmailModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="chooseEmailModalLabel">Chọn định dạng Email</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-lg-10">
                            <div class="control-group">
                                <select class="form-control custom-select" ng-options="e.Chude for e in emails" ng-change="chooseDetailEmail()" ng-model="email">
                                    <option hidden>Chọn định dạng Email</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <br />
                    @*<div class="col-sm-4" id="the"></div>*@
                    <div class="tab-content row">
                        <div class="col-sm-6">
                            <h4>Tiêu đề: </h4>
                            <span ng-bind="email.Chude"></span>
                            <br />
                            <h4>Người gửi: </h4>
                            <span class="badge badge-pill badge-success float-left" style="font-size: 12px;">{{ngGui.Ho}} {{ngGui.Ten}}</span>
                            <br />
                            <h4>Giảng viên: </h4>
                            <span class="badge badge-pill badge-success float-left" style="font-size: 12px;" ng-repeat="g in giangVien">{{g.Ho}} {{g.Ten}}</span>
                        </div>
                        <div class="col-sm-6">
                            <h4>Nội dung: </h4>
                            @*<span id="noiDungemail" ng-bind-html="email.Noidung"></span>*@
                            <textarea class="form-control" style="height:250px" ng-model="email.Noidung" id="Noidung"></textarea><br />
                            <button type="button" class="btn btn-success" style="float:right;" ng-click="saveEmail(email)">Lưu </button>
                        </div>
                    </div>
                    <br />
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                    <button type="button" class="btn" style="float:right; background-color:#b22222; color:white; border: 2px solid #ffffff;" ng-click="finish(email)">Gửi mail</button>
                    @*<button type="button" class="btn btn-primary btn-lg" id="load" data-loading-text="<i class='fa fa-spinner fa-spin '></i> Processing Order">Submit Order</button>*@
                </div>
            </div>
        </div>
    </div>
</div>
