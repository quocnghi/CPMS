
@{
    ViewBag.Title = "Config";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" type="text/css" href="~/Areas/CMS/Content/Curriculum/dist/css/TopButton.css">
<link href="~/Areas/CMS/Content/Curriculum/assets/libs/toastr/build/toastr.min.css" rel="stylesheet">
<div class="page-wrapper" ng-controller="CodeController">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Quản lý cấu hình</h4>
                <div class="ml-auto text-right">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home")">Trang Chủ</a></li>
                            <li class="breadcrumb-item">Quản lí chung</li>
                            <li class="breadcrumb-item active" aria-current="page">Quản lý người dùng</li>
                        </ol>
                    </nav>
                </div>
            </div>
            @*<div class="ml-auto text-right">
                    <button type="button" data-toggle="modal" data-target="#myModal" class="btn btn-success btn-lg" style="font-size:15px; margin-right:10px">Thêm</button>
                </div>*@
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-body wizard-content">
                <div class="table-responsive">
                    <table @*id="zero_config"*@ class="table table-striped table-bordered">
                        <thead style="text-align:center ; background-color: firebrick; color: white">
                            <tr>
                                <th style="text-align:center">STT</th>
                                <th style="text-align:center">Loại Mã</th>
                                <th style="text-align:center">Tên Mã</th>
                                <th style="text-align:center">Thao Tác</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="c in codes">
                                <td style="text-align:center">{{$index+1}}</td>
                                <td style="text-align:center">{{c.LoaiMa}}</td>
                                <td style="text-align:center">{{c.TenMa}}-{{c.Phienban}}</td>
                                <td style="text-align:center">
                                    <a title="Chỉnh sửa" href="javascript:void(0)" data-toggle="modal" data-target="#myModal"><img src="~/Areas/CMS/images/IconEdit.png" style="width:25px;" ng-click="edit(c)"></a>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        @*nut len dau trang*@
        <div class='lentop'>
            <div>
                <img src='~/Areas/CMS/images/top.png' />
            </div>
        </div>
        @*form chỉnh sửa *@
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header" style="background-color:#d51c29; color:white">
                        <h4 class="modal-title">Chỉnh sửa cấu hình</h4>
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                        <label style="margin-left:15px">Tên mã</label>
                        <div class="row" ng-if="code.LoaiMa == '1'">
                            <input type="text" class="form-control col-lg-6" maxlength="20" ng-model="code.TenMa" />
                            <div class="col-lg-6 row">
                                <label class="col-lg-1">_</label>
                                <input disabled type="text" class="form-control col-lg-10" style="margin-left:5px" value="xxx" />
                            </div>
                            <br />
                            <br />
                            <h7 style="color:red">Chú ý: Chỉ được chỉnh sửa trong { } </h7>
                            <h7 >Trong đó LoaiCT: Loại chương trình đào tạo; TenRG: Tên rút gọn chương trình đào tạo; Nam: Năm</h7>
                        </div>
                        <div class="row" ng-if="code.LoaiMa == '2'">
                            <input type="text" class="form-control col-lg-6" maxlength="5" ng-model="code.TenMa" />
                            <div class="col-lg-6 row">
                                <label class="col-lg-1">_</label>
                                <input disabled type="text" class="form-control col-lg-10" style="margin-left:5px" value="xxx" />
                            </div>
                        </div>
                        <div class="row" ng-if="code.LoaiMa == '3'">
                            <input type="text" class="form-control col-lg-6" maxlength="5" ng-model="code.TenMa" />
                            <div class="col-lg-6 row">
                                <label class="col-lg-1">_</label>
                                <input disabled type="text" class="form-control col-lg-10" style="margin-left:5px" value="xxx" />
                            </div>
                        </div>
                        <div class="row" ng-if="code.LoaiMa == '4'">
                            <input type="text" class="form-control col-lg-6" maxlength="5" ng-model="code.TenMa" />
                            <div class="col-lg-6 row">
                                <label class="col-lg-1">_</label>
                                <input disabled type="text" class="form-control col-lg-10" style="margin-left:5px" value="xxx" />
                            </div>
                        </div>
                        <div class="row" ng-if="code.LoaiMa == '5'">
                            <input type="text" class="form-control col-lg-6" maxlength="5" ng-model="code.TenMa" />
                            <div class="col-lg-6 row">
                                <label class="col-lg-1">_</label>
                                <input disabled type="text" class="form-control col-lg-10" style="margin-left:5px" value="{{code.Phienban}}" />
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-success" data-dismiss="modal" ng-click="EditCode(code)">Lưu</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@*//nut len dau trang*@
<script>
    $(function () {
        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) $(".lentop").fadeIn();
            else $(".lentop").fadeOut();
        });
        $(".lentop").click(function () {
            $("body,html").animate({ scrollTop: 0 }, "slow");
        });
    });
</script>
<script src="https://gitcdn.github.io/bootstrap-toggle/2.2.2/js/bootstrap-toggle.min.js"></script>
<script src="~/Areas/CMS/Content/Curriculum/assets/libs/toastr/build/toastr.min.js"></script>
<script src="~/Areas/CMS/Content/Curriculum/angular/QLMa/CodeModel.js"></script>
<script src="~/Areas/CMS/Content/Curriculum/angular/QLMa/CodeService.js"></script>
<script src="~/Areas/CMS/Content/Curriculum/angular/QLMa/CodeController.js"></script>