
@{
    ViewBag.Title = "NDCDRView";
    Layout = "~/Areas/CMS/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="~/Areas/CMS/Content/Curriculum/dist/css/TopButton.css">
<div class="page-wrapper" ng-controller="MatranController">
    <div class="page-breadcrumb">
        <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
                <h4 class="page-title">Ma Trận CDR - Ma Trận Nội Dung GD</h4>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        <div class="card">
            <div class="card-body wizard-content">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead style="text-align:center ; background-color: firebrick; color: white">
                            <tr>
                                <th scope="col">STT</th>
                                <th scope="col">Tên học phần</th>
                                <th scope="col">Học kỳ</th>
                                <th scope="col">Số TC</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr ng-repeat="kh in khdts">
                                <td style="text-align: center">{{$index+1}}</td>
                                <td><a href="" data-toggle="modal" data-target="#matran" ng-click="getreview(kh.MaKHDT)">{{kh.TenHP}}</a></td>
                                <td style="text-align: center">{{kh.Hocky}}</td>
                                <td style="text-align: center">{{kh.SoTC}}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <a class="btn " style="float:right; margin-right:1%;border-radius:25px ;color:black;border-bottom-color:#b22222; border: 1px solid #b22222;" href="@Url.Action("DSMatran", "MaTran")">Quay lại</a>
            </div>
        </div>
    </div>
    @*nut len dau trang*@
    <div class='lentop'>
        <div>
            <img src='~/Areas/CMS/images/top.png' />
        </div>
    </div>
    @*form them nguoi dung *@
    <div class="modal fade" id="matran" role="dialog">
        <div class="modal-dialog modal-lg">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header" style="background-color:#d51c29; color:white">
                    <h4 class="modal-title">Ma Trận Quan Hệ </h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    <label style="margin-left:15px">Ma trận quan hệ giữa CDR HP - CDR CTDT</label>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead style="text-align:center; background-color: firebrick; color: white ">
                                <tr>
                                    <th scope="col">STT</th>
                                    <th scope="col">Ký hiệu</th>
                                    <th scope="col">KQHTMĐ của học phần Hoàn thành học phần này, sinh viên có thể</th>
                                    <th scope="col">CDR của CTDT</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="cdrmonhoc in cdrmonhocs">
                                    <td style="text-align:center; vertical-align: middle">{{$index + 1}}</td>
                                    <td style="text-align:center; vertical-align: middle">{{cdrmonhoc.MaHT}}</td>
                                    <td style="text-align:center; vertical-align: middle">{{cdrmonhoc.Mota}}</td>
                                    <td style="text-align:center;vertical-align: middle ">{{cdrmonhoc.MaHT1[cdrmonhoc.MaHT1.length - 1].MaELO.substr(0, cdrmonhoc.MaHT1[cdrmonhoc.MaHT1.length - 1].MaELO.length - 1)}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <br />
                    <label style="margin-left:15px">Ma trận quan hệ giữa Nội Dung GD - CDR HP</label>
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered">
                            <thead>
                                <tr style="text-align:center ; background-color: firebrick; color: white">
                                    <th style="text-align:center; vertical-align: middle">STT</th>
                                    <th style="text-align:center; vertical-align: middle">Tên nội dung</th>
                                    <th style="text-align:center; vertical-align: middle">Nội dung giảng dạy</th>
                                    <th style="text-align:center; vertical-align: middle">KQHTMD của HP</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="nd in noidunggds">
                                    <td style="text-align:center; vertical-align: middle">{{$index+1}}</td>
                                    <td style="text-align:center; vertical-align: middle">{{nd.TenHT}}</td>
                                    <td style="text-align:center; vertical-align: middle">{{nd.Noidung}}</td>
                                    <td style="text-align:center; vertical-align: middle">{{nd.Mota[nd.Mota.length - 1].MaHT.substr(0, nd.Mota[nd.Mota.length - 1].MaHT.length - 1)}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@*//nut len dau trang*@
<script>
    $(function () {
        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) $(".lentop").fadeIn();
            else $(".lentop").fadeOut();
        });
        $(".lentop").click(function () {
            $("body,html").animate({ scrollTop: 0 }, "slow");
        });
    });
</script>
<script src="~/Areas/CMS/Content/Curriculum/angular/MaTran/MatranModel.js"></script>
<script src="~/Areas/CMS/Content/Curriculum/angular/MaTran/MatranService.js"></script>
<script src="~/Areas/CMS/Content/Curriculum/angular/MaTran/MatranController.js"></script>
