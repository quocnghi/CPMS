        if (step === 'step5') {
            step = 'step4';
            step5.classList.remove("active");
            step4.classList.add("active");
            s1content.style.display = 'none'
            s2content.style.display = 'none'
            s3content.style.display = 'none'
            s4content.style.display = 'block'
