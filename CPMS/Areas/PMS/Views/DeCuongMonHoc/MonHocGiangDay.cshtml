        //Lấy danh sách giáo viên đã được phân công giảng dạy theo từng KHDT trong db
        function createTableWithData(idbranch, idyear, idsemester) {
            let url = '@Url.Action("DC_MonHocGiangDayGV", "API")/' + '?idBranch=' + idbranch
                + '&idYear=' + idyear + '&idSemester=' + idsemester + '&idUser=' + idUser
            $.getJSON(url, data => {
                if (data.length == 0) {
                    toastr.warning('@CommonRS.Resources.VI.mes_ChuaDuocPC', 'Lưu ý!');
                    $('#xkhdt_semester').prop("disabled", false) //Disable
                } else {
                    //Học kỳ mới - có cột trạng thái:
                    let cStatus = false
                    for (let item of data) {
                        if (item.TrangthaiKH != '@CommonRS.Resources.Variables.TrangthaiKH_ThucThi' && item.TrangthaiKH != '@CommonRS.Resources.Variables.TrangthaiKH_LuuTru') {
                            cStatus = true
                            break
                        }
                        cStatus = false
                    }
                    cStatus ? renderTableHeader() : renderTableHeaderWithoutStatus()
                    // console.log(data)
                    //Học kỳ cũ - không có cột trạng thái, ngày hết hạn:
                    //renderTableHeaderWithoutStatus()
                    for (let index = 0; index < data.length; index++) {
                        //Học kỳ mới - có cột trạng thái:
                        /** Trạng thái
                         * 0 Đã từ chối
                         * 1 Đã phê duyệt
                         * 2 Chờ phê duyệt
                         * 4 Chua Nhap
                         * Gom nhom lai 1,2 : True
                         * Else : false
                         */
                        // console.log(data[index].TrangThai)
                        if (cStatus) {
                            switch (data[index].TrangThai) {
                                case '0':
                                    RenderTable(data[index], index + 1, 0)
                                    break
                                case '1':
                                    RenderTable(data[index], index + 1, 1)
                                    break
                                case '2':
                                    RenderTable(data[index], index + 1, 2)
                                    break
                                case '3':
                                    RenderTable(data[index], index + 1, 3)
                                    break
                                case '4':
                                    RenderTable(data[index], index + 1, 4)
                                    break
                            }
                        } else {
                            RenderTableWithoutStatus(data[index], index + 1)
                        }


                        //Học kỳ cũ - không có cột trạng thái, ngày hết hạn:

                    }
                    //document.getElementById("idBtnLuu").style.display = "block";
                    $('#xkhdt_semester').prop("disabled", false) //Disable
                }

            });
        }

