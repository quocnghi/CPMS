            btnView.setAttribute('href', 'javascript:void(0)')
            btnView.setAttribute('onclick', 'getViewXemChiTietDeCuong(' + maKHDT + ')')
            btnView.innerHTML = 'Xem chi tiết'

            let col5 = document.createElement("td")

            switch (nStataus) {
                case 0:
                    col4.appendChild(btnEdit)
                    col4.appendChild(btnView)
                    col5.innerHTML = '<span class="badge badge-pill badge-danger">Đã từ chối</span>'
                    break
                case 1:
                    let btnExportWord = document.createElement('a')
                    let link = '@Url.Action("ExportWord", "DeCuongMonHoc", new { maKHDT = "val" })';
                    link = link.replace("val", maKHDT);
                    btnExportWord.setAttribute('class', 'btn btn-info btn-sm m-l-10')
                    btnExportWord.setAttribute('href', link)
                    btnExportWord.innerHTML = 'Xuất File'
                    col4.appendChild(btnView)
                    col4.appendChild(btnExportWord)
                    col5.innerHTML = '<span class="badge badge-pill badge-success">Đã phê duyệt</span>'
                    break
                case 2:
                    col4.appendChild(btnView)
                    col5.innerHTML = '<span class="badge badge-pill badge-warning">Chờ phê duyệt</span>'
                    break
                case 3:
                    col4.appendChild(btnEdit)
                    col4.appendChild(btnView)
                    col5.innerHTML = '<span class="badge badge-pill badge-light">Chưa cập nhật</span>'
                    break
                case 4:
