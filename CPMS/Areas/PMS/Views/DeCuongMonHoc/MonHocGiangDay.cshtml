        function RenderTableWithoutStatus(obj, index) {
            //tạo dòng
            let row = document.createElement("tr")
            row.setAttribute("id", "rowNum" + index)
            let ts = parseInt(obj.GioLT) + parseInt(obj.GioTH) + parseInt(obj.GioDa) + parseInt(obj.GioTT)
