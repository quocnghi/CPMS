        <label>Phương tiện phục vụ giảng dạy:</label>
        <textarea class="form-control" id="formPTPVGD" rows="5" placeholder="Nhập phương tiện phục vụ giảng dạy">@Model.PhuongtienGD</textarea>
        <div class="invalid-feedback">
            Không được để trống
        </div>
    </div>

    <div class="form-group required-field col-md-6">
        <label>Phương tiện thi:</label>
        <textarea class="form-control" id="formPTT" rows="5" placeholder="Nhập phương tiện thi">@Model.Phuongtienthi</textarea>
        <div class="invalid-feedback">
            Không được để trống
