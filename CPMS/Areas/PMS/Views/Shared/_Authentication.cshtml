@using Capstone.Models
@model LoginViewModel

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/Content/images/logo-vlu.png">
    <link href="~/Content/login/css/iofrm-theme17.css" rel="stylesheet" />
    <link href="~/Content/login/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/icons/fontawesome-pro-5.3.1-web/css/all.css" rel="stylesheet" />
    @*<link href="~/Content/login/css/fontawesome-all.min.css" rel="stylesheet" />*@
    <link href="~/Content/login/css/iofrm-style.css" rel="stylesheet" />
</head>
<body>
    <div class="form-body without-side">
        <div class="website-logo">
            <a href="#">
                <div class="logo">
                    <img class="logo-size" src="@Url.Content("~/Content/images/logo-vlu.png")" alt="logo-vlu" />
                </div>
            </a>
        </div>
        <div class="row">
            <div class="img-holder">
                <div class="bg"></div>
                <div class="info-holder">
                    <img src="@Url.Content("~/Content/login/images/graphic3.svg")" />
                </div>
            </div>
            <div class="form-holder">
                <div class="form-content">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/login/js/popper.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Content/login/js/main.js"></script>
</body>
</html>