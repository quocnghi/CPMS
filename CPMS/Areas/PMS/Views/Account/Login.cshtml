@using Capstone.Models
@model LoginViewModel
@{
    ViewBag.Title = "Đăng nhập tài khoản";
    Layout = "~/Views/Shared/_Authentication.cshtml";
}

<div class="form-items" id="formLogin">
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4 class="text-center" style="font-weight: 600; margin-bottom: 20px;">Đăng nhập tài khoản</h4>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <form>
            @Html.TextBoxFor(m => m.Email, new { placeholder = "Địa chỉ Email", @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            @Html.PasswordFor(m => m.Password, new { placeholder = "Mật khẩu", @class = "form-control", required = "required" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            <div class="form-button text-right">
                <button type="submit" id="btnLogin" href="javascript:void(0)" class="ibtn">Đăng nhập</button>
                @*<a href="javascript:void(0)">Quên mật khẩu?</a>*@
            </div>
        </form>
        <div class="other-links">
            <div class="text">Đăng nhập nhanh bằng tài khoản:</div>
            @*<a href="#"><i class="fab fa-facebook-f"></i>Tài khoản VLU</a>*@
            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
        </div>
        <div class="page-links">
            <a id="registerAccount" href="@Url.Action("Register","Account")">Đăng ký tài khoản mới</a>
        </div>
    }
</div>